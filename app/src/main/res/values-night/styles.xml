<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme styles -->
    <style name="DialogText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DialogText.Heading" parent="@style/DialogText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="DialogText.Placeholder" parent="@style/DialogText">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <style name="DialogText.Button" parent="@style/DialogText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Note dialog specific styles for dark theme -->
    <style name="NoteDialog">
        <item name="android:background">@drawable/note_dialog_background</item>
    </style>

    <style name="NoteDialog.EditText" parent="@style/DialogText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Base button style for note dialog -->
    <style name="NoteDialog.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="NoteDialog.Button.Save" parent="@style/NoteDialog.Button">
        <item name="android:background">@drawable/note_dialog_save_button</item>
        <item name="android:textColor">@color/accent_primary</item>
    </style>

    <style name="NoteDialog.Button.Cancel" parent="@style/NoteDialog.Button">
        <item name="android:background">@drawable/note_dialog_cancel_button</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>