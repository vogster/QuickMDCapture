<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Базовый стиль, на который можно ссылаться как @style/DialogText -->
    <style name="DialogText" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#E6E6E6</item>   <!-- text_primary -->
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Заголовок / spinner текст -->
    <style name="DialogText.Heading" parent="@style/DialogText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">#E6E6E6</item>
    </style>

    <!-- Большой placeholder, как на скрине ("Введите заметку") -->
    <style name="DialogText.Placeholder" parent="@style/DialogText">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">#8B8F94</item>   <!-- text_secondary -->
    </style>

    <!-- Кнопочный текст -->
    <style name="DialogText.Button" parent="@style/DialogText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

</resources>
